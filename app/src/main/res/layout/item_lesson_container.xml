<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F8F8F8"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:id="@+id/unit_lesson_card"
        android:layout_margin="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp">

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progressTint="#4ABD80"
                android:progressBackgroundTint="#C4C4C4"
                android:progress="50"
                android:id="@+id/unit_progress_bar"/>

            <TextView
                android:id="@+id/unit_lesson_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center_vertical|start"
                android:text="%LessonName%"
                android:textColor="#000000"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/unit_progress_bar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/unit_lesson_name"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:id="@+id/unit_sub_linear_0"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/abc_vector_test"
                        app:tint="#C4C4C4"
                        android:scaleType="fitCenter"
                        android:id="@+id/unit_sub_linear_0_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="%Section%"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:autoSizeTextType="uniform"
                        android:gravity="center_vertical|start"
                        android:id="@+id/unit_sub_linear_0_name" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:id="@+id/unit_sub_linear_1"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/abc_vector_test"
                        app:tint="#C4C4C4"
                        android:scaleType="fitCenter"
                        android:id="@+id/unit_sub_linear_1_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="%Section%"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:autoSizeTextType="uniform"
                        android:gravity="center_vertical|start"
                        android:id="@+id/unit_sub_linear_1_name" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:id="@+id/unit_sub_linear_2"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
