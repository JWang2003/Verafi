<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:paddingHorizontal="5dp"
    android:paddingBottom="5dp">

    <androidx.cardview.widget.CardView

        android:layout_width="380sp"
        android:layout_height="200sp"
        android:layout_gravity="center"
        app:cardCornerRadius="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fact_check_title"
                android:fontFamily="sans-serif-medium"
                android:layout_width="wrap_content"
                android:layout_height="19sp"
                android:text="Claim Title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/fact_check_claimant"
                android:layout_width="wrap_content"
                android:layout_height="24sp"
                app:layout_constraintTop_toBottomOf="@id/fact_check_title"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Claim Author" />

            <TextView
                android:id="@+id/fact_check_source"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                app:layout_constraintTop_toBottomOf="@id/fact_check_claimant"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Claim Source" />

            <TextView
                android:id="@+id/fact_check_reviewDate"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                app:layout_constraintTop_toBottomOf="@id/fact_check_source"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Claim Source" />


            <TextView
                android:id="@+id/fact_check_rating"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                app:layout_constraintTop_toBottomOf="@id/fact_check_reviewDate"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Claim Rating" />
            <TextView
                android:id="@+id/fact_check_publisherName"
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                app:layout_constraintTop_toBottomOf="@id/fact_check_rating"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Claim Publisher name" />
            <TextView
                android:id="@+id/fact_check_publisherSite"
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                app:layout_constraintTop_toBottomOf="@id/fact_check_publisherName"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Claim Publisher site"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
