<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:paddingHorizontal="5dp"
    android:paddingBottom="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="380sp"
        android:layout_height="wrap_content"
       android:paddingLeft="40sp"
        app:cardCornerRadius="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingTop="20sp"
            android:paddingBottom="20sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="20sp"
            android:paddingLeft="20sp">

            <TextView
                android:id="@+id/fact_check_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Claim Title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fact_check_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="Claim Date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fact_check_title" />

            <TextView
                android:id="@+id/fact_check_claimant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Claim Author"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fact_check_date" />

            <TextView
                android:id="@+id/fact_check_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Claim Source"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fact_check_claimant" />

            <TextView
                android:id="@+id/fact_check_reviewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Claim ReviewDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fact_check_source" />


            <TextView
                android:id="@+id/fact_check_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Claim Rating"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fact_check_reviewDate" />

            <TextView
                android:id="@+id/fact_check_publisherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Claim Publisher name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fact_check_rating" />

            <TextView
                android:id="@+id/fact_check_publisherSite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30sp"
                android:text="Claim Publisher site"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fact_check_publisherName" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
